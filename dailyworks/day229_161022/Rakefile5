task read: './read.txt'

desc 'test.txtの中身を読み込んで、read.txtを作成する'
file './read.txt' => './test_dir/test.txt' do
  puts 'write read.txt'

  File.open('./read.txt', 'w') do |f|
    f << File.read('./test_dir/test.txt')
  end
end

desc 'test.txtを作成する'
file './test_dir/test.txt' do
  puts 'create test.txt'
  File.open('./test_dir/test.txt', 'w') do |f|
    f << 'success'
  end
end
